<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="282dp">

        <ImageView
            android:id="@+id/image_view_upload"
            android:layout_width="217dp"
            android:layout_height="179dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="24dp"
            android:paddingTop="13dp" />

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_view_sDate"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/text_view_sDate"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="42dp"
            android:fontFamily="sans-serif"
            android:paddingTop="25dp"
            android:text="Name"
            android:textColor="#39374D"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/text_view_percentage"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_name"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/image_view_upload"
            android:fontFamily="sans-serif"
            android:paddingTop="5dp"
            android:text="Name"
            android:textColor="#39374D"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/text_view_coupon"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_view_percentage"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/text_view_percentage"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="141dp"
            android:fontFamily="sans-serif"
            android:paddingTop="5dp"
            android:text="Name"
            android:textColor="#39374D"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/text_view_sDate"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_view_percentage"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/text_view_percentage"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="116dp"
            android:fontFamily="sans-serif"
            android:paddingTop="5dp"
            android:text="Name"
            android:textColor="#39374D"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/text_view_eDate"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_view_name"
            android:layout_below="@+id/text_view_sDate"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="-116dp"
            android:fontFamily="sans-serif"
            android:paddingTop="5dp"
            android:text="Name"
            android:textColor="#39374D"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="normal" />

    </RelativeLayout>


</android.support.v7.widget.CardView>