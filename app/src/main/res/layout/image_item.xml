<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="182dp">

        <ImageView
            android:id="@+id/image_view_upload"
            android:layout_width="217dp"
            android:layout_height="179dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:paddingTop="13dp" />

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:paddingTop="25dp"
            android:text="Name"
            android:textColor="#39374D"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/text_view_percentage"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_view_name"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:paddingTop="5dp"
            android:text="Name"
            android:textColor="#39374D"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/text_view_coupon"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_view_percentage"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:paddingTop="5dp"
            android:text="Name"
            android:textColor="#39374D"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/text_view_sDate"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_view_coupon"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:paddingTop="5dp"
            android:text="Name"
            android:textColor="#39374D"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/text_view_eDate"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_view_sDate"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:paddingTop="5dp"
            android:text="Name"
            android:textColor="#39374D"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="normal" />

    </RelativeLayout>


</android.support.v7.widget.CardView>