<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginActivity"
    android:background="@color/white">


    <EditText
        android:id="@+id/EditTextemail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="232dp"
        android:backgroundTint="#D3D3D3"
        android:fontFamily="sans-serif"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#7c7a7a"
        android:textColorHint="#A9A9A9" />

    <EditText
        android:id="@+id/EditTextpassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="296dp"
        android:backgroundTint="#D3D3D3"
        android:fontFamily="sans-serif"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#7c7a7a"
        android:textColorHint="#A9A9A9" />


    <!-- Signup Button -->
    <Button
        android:id="@+id/Signin"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="190dp"
        android:background="@drawable/edit_rouded"
        android:padding="12dp"
        android:text="Sign in"
        android:textColor="@color/white" />

    <TextView

        android:id="@+id/link_signup"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="133dp"
        android:gravity="center"
        android:text="New member? Sign up now"
        android:textColor="#6F73FF"
        android:textSize="16dip"
        android:layout_alignParentLeft="true" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />


    <ImageView
        android:layout_width="35dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/EditTextpassword"
        android:layout_marginStart="34dp"
        android:adjustViewBounds="false"
        android:src="@drawable/ic_lock_black_24dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="267dp"
        android:layout_marginLeft="34dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/link_forgetPass"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="278dp"
        android:layout_marginStart="14dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Forgot password?"
        android:textColor="#6F73FF"
        android:textSize="16dip" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="39dp"
        android:layout_marginStart="34dp"
        android:layout_alignTop="@+id/EditTextemail"
        android:adjustViewBounds="false"
        android:src="@drawable/ic_email_black_24dp"
        tools:layout_editor_absoluteX="20dp"
        android:layout_alignParentLeft="true"
        tools:layout_editor_absoluteY="267dp"
        android:layout_alignLeft="@+id/EditTextemail"
        android:layout_marginLeft="34dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="123dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:src="@drawable/logohome" />
</RelativeLayout>
